<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.KeyboardView" parent="android:Widget.KeyboardView">
        <item name="android:background">#263238</item>
        <item name="android:keyBackground">@drawable/key_selector</item>
        <item name="android:keyTextSize">30sp</item>
        <item name="android:keyTextColor">@android:color/white</item>
        <item name="android:popupLayout">@layout/key_preview</item>
        <item name="android:keyPreviewLayout">@layout/key_preview</item>
    </style>

</resources>
